<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/iv_event_item_width"
        android:layout_height="@dimen/iv_event_item_height"
        android:layout_marginEnd="@dimen/layout_margin"
        android:layout_marginTop="@dimen/smaller_layout_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/darker_gray"
        android:contentDescription="@string/iv_event_image_description" />

    <TextView
        android:id="@+id/tv_event_list_item_day_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_margin"
        android:layout_marginEnd="@dimen/smaller_layout_margin"
        android:layout_marginStart="@dimen/smaller_layout_margin"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tv_lbl_event_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        tools:text="Day 01" />

</android.support.constraint.ConstraintLayout>